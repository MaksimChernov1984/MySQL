<Label@Label>
    font_size: '30sp'

<Spinner@Spinner>
    halign: 'center'
    valign: 'middle'
    background_color: (0.98, 0.27, 0.16, 1)
    background_normal: ''

<TextInput@TextInput>
    multiline: 'False'
    halign: 'center'
    valign: 'middle'
    background_color: (.91, .91, .93, 1)

<MyButton@Button>
    halign: 'center'
    valign: 'middle'
    background_color: (0, 0, 0, 0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (0.98, 0.27, 0.16, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [20]

<Container>
    r1: r1
    r2: r2
    v1_sec: v1_sec
    v2_sec: v2_sec
    lbl_orb2: lbl_orb2
    lbl_v1_hour: lbl_v1_hour
    lbl_v1_day: lbl_v1_day
    lbl_v1_year: lbl_v1_year
    lbl_v2_hour: lbl_v2_hour
    lbl_v2_day: lbl_v2_day
    lbl_v2_year: lbl_v2_year
    lbl_t1_hour: lbl_t1_hour
    lbl_t1_day: lbl_t1_day
    lbl_t1_year: lbl_t1_year
    lbl_l2: lbl_l2
    lbl_l2_cent: lbl_l2_cent

    destination: destination
    destination_select: destination_select
    tariff: tariff
    tariff_select: tariff_select
    passengers: passengers
    passengers_select: passengers_select
    cargo: cargo
    cargo_select: cargo_select
    btn_price: btn_price
    price_select: price_select

    halign: 'center'
    valign: 'middle'
    padding: 10
    canvas.before:
        Color: 
            rgba: (0, 0.05, 0.1, 1.0)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        Accordion:
            orientation: 'vertical'

            AccordionItem: 
                title: 'Наш полёт'

                BoxLayout:
                    orientation: 'vertical'
                    padding: 20

                    BoxLayout:
                        Label:
                            text: 'НАШ ПОЛЁТ'

                    BoxLayout:
                        Label:
                            text: 'Полуось орбиты\nточки вылета'
                        TextInput:
                            id: r1
                        Label:
                            text: 'млн км.'

                    BoxLayout:
                        Label:
                            text: 'Полуось орбиты\nобъекта назначения'
                        TextInput:
                            id: r2
                        Label:
                            text: 'млн км.'

                    BoxLayout:
                        Label:
                            text: 'Скорость ракеты'
                        TextInput:
                            id: v1_sec
                        Label:
                            text: 'км/сек'
                            
                    BoxLayout:
                        Label:
                            text: 'Скорость объекта'
                        TextInput:
                            id: v2_sec
                        Label:
                            text: 'км/сек'

                    BoxLayout:
                        MyButton:
                            text: 'Вычислить' 
                            on_release: root.calculate()                                    

                    BoxLayout:
                        Label:
                            id: lbl_orb2
                            text: 'Длина орбиты объекта ... млн км'

                    BoxLayout:
                        Label:
                            text: 'Скорость ракеты'

                    BoxLayout:
                        Label:
                            id: lbl_v1_hour
                            text: 'км/час...'
                        Label:
                            id: lbl_v1_day
                            text: 'км/сут...'
                        Label:
                            id: lbl_v1_year
                            text: 'км/год...'

                    BoxLayout:
                        Label:
                            text: 'Скорость объекта'

                    BoxLayout:
                        Label:
                            id: lbl_v2_hour
                            text: 'км/час...'
                        Label:
                            id: lbl_v2_day
                            text: 'км/сут...'
                        Label:
                            id: lbl_v2_year
                            text: 'км/год...'

                    BoxLayout:
                        Label:
                            text: 'Время движения ракеты до объекта'

                    BoxLayout:
                        Label:
                            id: lbl_t1_hour
                            text: 'час...'
                        Label:
                            id: lbl_t1_day
                            text: 'сут...'
                        Label:
                            id: lbl_t1_year
                            text: 'лет...'

                    BoxLayout:
                        Label:
                            id: lbl_l2
                            text: 'За время движения ракеты объект прошёл...'

                    BoxLayout:
                        Label:
                            id: lbl_l2_cent
                            text: 'Это составляет ...% от его орбиты'

            AccordionItem: 
                title: 'Стоимость'
                BoxLayout:
                    padding: 30
                    orientation: 'vertical'

                    BoxLayout:
                        Label:
                            text: 'Рассчёт стоимости полёта'

                    BoxLayout:
                        padding: 3
                        Spinner:
                            id: destination
                            text: 'Куда\nлетим?' 
                            values: 'Луна', 'Меркурий', 'Венера', 'Марс', 'Церера', 'Веста', 'Ганимед', 'Ио', 'Европа', 'Каллисто', 'Титан', 'Титания', 'Тритон', 'Плутон', 'Эрида'
                            on_text: root.on_destination_select()
                        Label:
                            id: destination_select
                            text: 'Цель назначения...'

                    BoxLayout:
                        padding: 3
                        Spinner:
                            id: tariff
                            text: 'Выберите\nтариф' 
                            values: 'простой', 'быстрый', 'супербыстрый'
                            on_text: root.on_tariff_select()
                        Label:
                            id: tariff_select
                            text: 'Тариф...'

                    BoxLayout:
                        padding: 3
                        Spinner:
                            id: passengers
                            text: 'Количество\nпассажиров' 
                            values: (str(n) for n in range(1, 21))
                            on_text: root.on_passengers_select()
                        Label:
                            id: passengers_select
                            text: '... пассажиров'

                    BoxLayout:
                        padding: 3
                        Spinner:
                            id: cargo
                            text: 'Количество\nтонн груза' 
                            values: (str(n) for n in range(1, 101))
                            on_text: root.on_cargo_select()
                        Label:
                            id: cargo_select
                            text: '... тонн груза'

                    BoxLayout:
                        padding: 3
                        MyButton:
                            id: btn_price
                            text: 'Стоимость' 
                            on_release: root.priced()
                        Label:
                            id: price_select
                            text: 'Стоимость полёта:'

            AccordionItem: 
                title: 'Мы'
                BoxLayout:
                    Image:
                        source: ('images/rocket_pipik_slivik.jpg')