<BoxLayout@BoxLayout>
    padding: 3 

<Label@Label>
    halign: 'center'
    valign: 'middle'

<TextInput@TextInput>
    multiline: 'False'
    halign: 'center'
    valign: 'middle'
    background_color: (1, 1, 0.9, 1)

<Container>
    r1: r1
    r2: r2
    v1_sec: v1_sec
    v2_sec: v2_sec
    lbl_orb2: lbl_orb2
    lbl_v1_hour: lbl_v1_hour
    lbl_v1_day: lbl_v1_day
    lbl_v1_year: lbl_v1_year
    lbl_v2_hour: lbl_v2_hour
    lbl_v2_day: lbl_v2_day
    lbl_v2_year: lbl_v2_year
    lbl_t1_hour: lbl_t1_hour
    lbl_t1_day: lbl_t1_day
    lbl_t1_year: lbl_t1_year
    lbl_l2: lbl_l2
    lbl_l2_cent: lbl_l2_cent


    font_size: 20
    canvas.before:
        Color: 
            rgba: (0, 0.05, 0.1, 1.0)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        BoxLayout:
            Label:
                text: 'НАШ ПОЛЁТ'

        BoxLayout:
            Label:
                text: 'Полуось орбиты\nточки вылета'
            TextInput:
                id: r1
            Label:
                text: 'млн км.'

        BoxLayout:
            Label:
                text: 'Полуось орбиты\nобъекта назначения'
            TextInput:
                id: r2
            Label:
                text: 'млн км.'

        BoxLayout:
            Label:
                text: 'Скорость ракеты'
            TextInput:
                id: v1_sec
            Label:
                text: 'км/сек'
                
        BoxLayout:
            Label:
                text: 'Скорость объекта'
            TextInput:
                id: v2_sec
            Label:
                text: 'км/сек'

        BoxLayout:
            Button:
                text: 'Вычислить'
                halign: 'center'
                valign: 'middle'
                size_hint: (0.6, 1)
                background_color: (0.9, 0.1, 0.1, 1)
                background_normal: ''
                on_press: root.calculate()

        BoxLayout:
            Label:
                id: lbl_orb2
                text: 'Длина орбиты объекта, млн км'

        BoxLayout:
            Label:
                text: 'Скорость ракеты'

        BoxLayout:
            Label:
                id: lbl_v1_hour
                text: 'км/час...'
            Label:
                id: lbl_v1_day
                text: 'км/сут...'
            Label:
                id: lbl_v1_year
                text: 'км/год...'

        BoxLayout:
            Label:
                text: 'Скорость объекта'

        BoxLayout:
            Label:
                id: lbl_v2_hour
                text: 'км/час...'
            Label:
                id: lbl_v2_day
                text: 'км/сут...'
            Label:
                id: lbl_v2_year
                text: 'км/год...'

        BoxLayout:
            Label:
                text: 'Время движения ракеты до объекта'

        BoxLayout:
            Label:
                id: lbl_t1_hour
                text: 'час...'
            Label:
                id: lbl_t1_day
                text: 'сут...'
            Label:
                id: lbl_t1_year
                text: 'лет...'

        BoxLayout:
            Label:
                id: lbl_l2
                text: 'За время движения ракеты объект прошёл...'

        BoxLayout:
            Label:
                id: lbl_l2_cent
                text: 'Это составляет ...% от его орбиты'
        