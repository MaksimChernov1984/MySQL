<BoxLayout@BoxLayout>
    padding: 5 

<Label@Label>
    font_size: 30
    halign: 'center'
    valign: 'middle'

<TextInput@TextInput>
    multiline: 'False'
    font_size: 30
    halign: 'center'
    valign: 'middle'
    background_color: (1, 1, 0.9, 1)

<Container>
    rad: rad
    period: period
    dimention: dimention
    lbl_rad: lbl_rad
    lbl_sec: lbl_sec
    lbl_hour: lbl_hour
    lbl_day: lbl_day
    lbl_year: lbl_year

    canvas.before:
        Color: 
            rgba: (0, 0.05, 0.1, 1.0)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        BoxLayout:

            Label:
                text: 'Параметры объектов Солнечной системы'
                background_color: (1, 1, .9, 1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle: 
                        size: self.size
                        pos: self.pos
                color: (1, 1, .9, 1)
                bold: True
                outline_color: (0, 0, .1, 1)
                outline_width: 1
            
        BoxLayout:
            Label:
                text: 'Большая\nполуось:'
            TextInput:
                id: rad
            Label:
                text: 'км'

        BoxLayout:
            Label:
                text: 'Период\nобращения:'
            TextInput:
                id: period
            Spinner:
                id: dimention
                text: 'Размерность'
                values: ('час', 'сут', 'год')
                font_size: 30
                halign: 'center'
                valign: 'middle'
                background_color: (0.9, 0.1, 0.1, 1)
                background_normal: ''

        BoxLayout:
            Button:
                text: 'Вычислить'
                font_size: 30
                halign: 'center'
                valign: 'middle'
                size_hint: (.5, 1)
                background_color: (0.9, 0.1, 0.1, 1)
                background_normal: ''
                on_press: root.calculate()

        BoxLayout:
            Label:
                id: lbl_rad
                text: 'Длина орбиты...'

        BoxLayout:
            Label:
                id: lbl_sec
                text:  'Скорость в км/сек...'

        BoxLayout:
            Label:
                id: lbl_hour
                text: 'Скорость в км/час...'

        BoxLayout:
            Label:
                id: lbl_day
                text: 'Скорость в км/сут...'

        BoxLayout:
            Label:
                id: lbl_year
                text: 'Скорость в км/год...'