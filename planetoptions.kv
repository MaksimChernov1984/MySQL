<BoxLayout@BoxLayout>
    padding: 5 

<Label@Label>
    font_size: 30
    halign: 'center'
    valign: 'middle'

<TextInput@TextInput>
    multiline: 'False'
    font_size: 30
    halign: 'center'
    valign: 'middle'

<Container>
    rad: rad
    period: period
    dimention: dimention
    lbl_rad: lbl_rad
    lbl_sec: lbl_sec
    lbl_hour: lbl_hour
    lbl_day: lbl_day
    lbl_year: lbl_year

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Параметры тел Солнечной системы'

            BoxLayout:
                Label:
                    text: 'Большая\nполуось:'
                TextInput:
                    id: rad
                Label:
                    text: 'км'

            BoxLayout:
                Label:
                    text: 'Период\nобращения:'
                TextInput:
                    id: period
                Spinner:
                    id: dimention
                    text: 'Размерность'
                    values: ('час', 'сут', 'год')
                    font_size: 30
                    halign: 'center'
                    valign: 'middle'
                    background_color: (0.9, 0.1, 0.1, 1)
                    background_normal: ''

            BoxLayout:
                Button:
                    text: 'Вычислить'
                    font_size: 30
                    halign: 'center'
                    valign: 'middle'
                    background_color: (0.9, 0.1, 0.1, 1)
                    background_normal: ''
                    on_press: root.calculate()

            BoxLayout:
                Label:
                    id: lbl_rad
                    text: 'Длина орбиты...'

            BoxLayout:
                Label:
                    id: lbl_sec
                    text:  'Скорость в км/сек...'

            BoxLayout:
                Label:
                    id: lbl_hour
                    text: 'Скорость в км/час...'

            BoxLayout:
                Label:
                    id: lbl_day
                    text: 'Скорость в км/сут...'

            BoxLayout:
                Label:
                    id: lbl_year
                    text: 'Скорость в км/год...'